<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:id="@+id/tvDASTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="20dip"
        android:background="@color/colorPrimaryDark"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingLeft="50dp"
        />

    <RadioGroup
        android:id="@+id/DASRGrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <RadioButton
            android:id="@+id/rbDASFSalesman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Salesman"
            android:textSize="16dp"/>

        <RadioButton
            android:id="@+id/rbDASETransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ended Transaction"
            android:textSize="16dp"/>

        <RadioButton
            android:id="@+id/rbDASFRecon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done with PID. For Recon"
            android:textSize="16dp"/>

        <RadioButton
            android:id="@+id/rbDASFUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Upload"
            android:textSize="16dp"/>

        <RadioButton
            android:id="@+id/rbDASFDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Download"
            android:textSize="16dp"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/llDASSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/tvDASCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/red"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="16dp"
            android:layout_marginRight="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>

        <TextView
            android:id="@+id/tvDASSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>

    </LinearLayout>

</LinearLayout>
