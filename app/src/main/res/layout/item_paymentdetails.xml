<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >



    <TextView
        android:id="@+id/rowsAmt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="25.00"
        android:theme="@style/AppTheme.FontStyle" />

    <TextView
        android:id="@+id/rowsPMode"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="CASH"
        android:theme="@style/AppTheme.FontStyle" />

    <TextView
        android:id="@+id/rowsRemarks"
        android:layout_width=".5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/rowsBank"
        android:layout_width=".5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/rowsBranch"
        android:layout_width=".5dp"
        android:layout_height="wrap_content" />
    <TextView
    android:id="@+id/rowsCheckNo"
    android:layout_width=".5dp"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rowsCheckDt"
        android:layout_width=".5dp"
        android:layout_height="wrap_content" />

</LinearLayout>


