<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/rowsID"
        android:layout_width=".5dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:theme="@style/AppTheme.FontStyle"
        />

    <TextView
        android:id="@+id/rowsCheckDt"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:text="09/30/18"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:theme="@style/AppTheme.FontStyle"
        />

    <TextView
        android:id="@+id/rowsBank"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="BPI-STO NINO"
        android:paddingLeft="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:theme="@style/AppTheme.FontStyle"
        />

    <TextView
        android:id="@+id/rowsCheckNo"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="1234567890"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="5dp"
        android:theme="@style/AppTheme.FontStyle"
        />

    <TextView
        android:id="@+id/rowsAmt"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingTop="12dp"
        android:text="1234.56"
        android:paddingBottom="12dp"
        android:paddingRight="5dp"
        android:theme="@style/AppTheme.FontStyle"
        />

    <TextView
        android:id="@+id/rowsLiq"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingRight="5dp"
        android:text="NO"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:theme="@style/AppTheme.FontStyle"
        />

</LinearLayout>

