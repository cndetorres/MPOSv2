<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView android:id="@+id/tvCLTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dp"
        android:background="#008000"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnCLInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" #f8931d"
        android:text="INFO"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></Button>

    <Button
        android:id="@+id/btnCLARBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" #f8931d"
        android:text="AR BALANCE"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></Button>



    <Button
        android:id="@+id/btnCLTransact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" #f8931d"
        android:text="TRANSACT"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"></Button>

</LinearLayout>
