<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/rowsCustCode"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingTop="12dp"
        android:text="CAS001"
        android:theme="@style/AppTheme.FontStyle" />

    <TextView
        android:id="@+id/rowsCustName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="5dp"
        android:text="TIAN-001"
        android:theme="@style/AppTheme.FontStyle" />

    <TextView
        android:id="@+id/rowsPrevMon"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="100000.00"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:theme="@style/AppTheme.FontStyle"
        />

    <TextView
        android:id="@+id/rows2MonsAgo"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="100000.00"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:theme="@style/AppTheme.FontStyle"
        />

    <TextView
        android:id="@+id/rows3MonsAgo"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="100000.00"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:theme="@style/AppTheme.FontStyle"
        />

</LinearLayout>

